<div class="container">

  <!-- SPINNING WHEEL -->
  <div class="flex-wrapper">
    <div class="single-chart">
      <svg viewBox="0 0 36 36" class="circular-chart orange">
        <path class="circle-bg"
          d="M18 2.0845
            a 15.9155 15.9155 0 0 1 0 31.831
            a 15.9155 15.9155 0 0 1 0 -31.831"
        />
        <path class="circle"
          stroke-dasharray="30, 100"
          d="M18 2.0845
            a 15.9155 15.9155 0 0 1 0 31.831
            a 15.9155 15.9155 0 0 1 0 -31.831"
        />
        <text x="18" y="20.35" class="percentage">30%</text>
      </svg>
    </div>

    <div class="single-chart">
      <svg viewBox="0 0 36 36" class="circular-chart green">
        <path class="circle-bg"
          d="M18 2.0845
            a 15.9155 15.9155 0 0 1 0 31.831
            a 15.9155 15.9155 0 0 1 0 -31.831"
        />
        <path class="circle"
          stroke-dasharray="60, 100"
          d="M18 2.0845
            a 15.9155 15.9155 0 0 1 0 31.831
            a 15.9155 15.9155 0 0 1 0 -31.831"
        />
        <text x="18" y="20.35" class="percentage">60%</text>
      </svg>
    </div>

    <div class="single-chart">
      <svg viewBox="0 0 36 36" class="circular-chart blue">
        <path class="circle-bg"
          d="M18 2.0845
            a 15.9155 15.9155 0 0 1 0 31.831
            a 15.9155 15.9155 0 0 1 0 -31.831"
        />
        <path class="circle"
          stroke-dasharray="90, 100"
          d="M18 2.0845
            a 15.9155 15.9155 0 0 1 0 31.831
            a 15.9155 15.9155 0 0 1 0 -31.831"
        />
        <text x="18" y="20.35" class="percentage">90%</text>
      </svg>
    </div>
  </div>
  <!-- END SPINNING WHEEL -->

  <h1 class="my-5">Child dashboard</h1>
  <hr>
  <h2>_MY GOAL</h2>
  <hr>
  <% @goal.each do |goal| %>
    <h2>Goal: <%= goal.title %></h2>
    <p><em><%= goal.end_date %></em></p>
    <strong><%= goal.total_points %> pts</strong>
    <% if goal.done == false %>
      <p>Goal is not achieve yet... :(</p>
    <% else %>
      <p>Goal achieved !!! :)</p>
    <% end %>
  <% end %>

  <%= link_to "Create an achievement", new_kid_achievement_path %>

  <hr>
  <h2>_ALL ACHIEVEMENTS</h2>
  <hr>
  <ul>
  <% @achievements.each do |achievement| %>
    <h3><%= achievement.task.name %></h3>
    <p><strong><%= achievement.due_at %></strong> - <%= achievement.done %></p>
    <input type="checkbox" name="done" value='<%= achievement.done %>' <%= 'checked' if achievement.done %>> Done?
    <%= link_to 'Update', edit_kid_achievement_path ,class: "btn btn-primary" %>
  <% end %>
  </ul>
  <%= link_to "Create an achievement", new_kid_achievement_path, class: "btn btn-primary" %>
  <br>

  <hr>
  <h2>_ALL TASKS</h2>
  <hr>
  <ul>
  <% @tasks.each do |task| %>
    <h3><%= task.category.name %></h3>
    <p><strong><%= task.name %></strong> - <%= task.description %></p>
  <% end %>
  </ul>
  <%= link_to "Create a task", new_kid_task_path, class: "btn btn-primary" %>
</div>
