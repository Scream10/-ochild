<div class="container">
  <h1 class="my-5">Child dashboard</h1>
  <hr>
  <h2>_MY GOAL</h2>
  <hr>
  <% @goal.each do |goal| %>
    <h2>Goal: <%= goal.title %></h2>
    <p><em><%= goal.end_date %></em></p>
    <strong><%= goal.total_points %> pts</strong>
    <% if goal.done == false %>
      <p>Goal is not achieve yet... :(</p>
    <% else %>
      <p>Goal achieved !!! :)</p>
    <% end %>
  <% end %>

  <hr>
  <h2>_ALL ACHIEVEMENTS</h2>
  <hr>
  <ul>
  <% @achievements.each do |achievement| %>
    <h3><%= achievement.task.name %></h3>
    <p><strong><%= achievement.due_at %></strong> - <%= achievement.done %></p>
    <input type="checkbox" name="done" value='<%= achievement.done %>' <%= 'checked' if achievement.done %>> Done?
    <%= link_to 'Update', edit_kid_achievement_path ,class: "btn btn-primary" %>
  <% end %>

  <!-- Button trigger modal -->
  <div class="create-achievement">
    <%= link_to 'Create an achievement', new_kid_achievement_path, class: "btn btn-lg btn-primary", "data-toggle" => "modal", "data-target" => "#exampleModal" %>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="exampleModalLongTitle"> Create an achievement </h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="modal-body">
          <%= simple_form_for @achievement, url: kid_achievements_path, method: :post do |f| %>
            <%= f.association :task, collection: @tasks, label_method: :name_of_method, value_method: :id %>
            <%= f.input :points, :input_html => { :type => "number" } %>
            <%= f.input :due_at %>
            <div class="d-flex justify-content-center mt-5 mb-3">
              <%= f.submit "Create", class: "btn-tangerine" %>
            </div>
            <div class="d-flex justify-content-center mt-2">
              <%= link_to "Create a new task", new_kid_task_path, class: "btn-tangerine" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>

  <hr>
  <h2>_ALL TASKS</h2>
  <hr>
  <ul>
  <% @tasks.each do |task| %>
    <h3><%= task.category.name %></h3>
    <p><strong><%= task.name %></strong> - <%= task.description %></p>
  <% end %>
  </ul>
  <%= link_to "Create a task", new_kid_task_path, class: "btn btn-primary" %>
</div>
