<%= simple_form_for achievement, url: kid_achievements_path, method: :post do |f| %>
  <div class="kid-task-name-achievement">
    <p>TASK:</p>
    <%= f.association :task, collection: tasks, label_method: :name_of_method, value_method: :id, selected: selected, label: false %>
  </div>
  <div class="find-task mt-5">
    <%= link_to "You didn't find a task?", new_kid_task_path, class: 'btn-square-sand', "data-toggle" => "collapse", "data-target" => "#collapseExample", "aria-expanded" => "false", "aria-controls" => "collapseExample" %>
  </div>
  <div class="kid-points mt-5">
    <p>SET YOUR POINTS FOR THIS TASK: </p>
    <%= f.input :points, label: false  %>
  </div>
  <div class="kid-date mt-5">
    <p>DATE:</p>
    <%= f.input :due_at, as: :string, type: :text, label: false %>
  </div>
  <div class="d-flex justify-content-center mt-5 mb-3">
    <%= f.submit "Create", class: "btn-tangerine" %>
  </div>
<% end %>
