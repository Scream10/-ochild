<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h4> Add a goal </h4>
   <%= simple_form_form @goal do |f| %>
   <%= f.input :title, placeholder: "Name of the goal" %>
   <%= f.input :end_date as: :date, html5: true, placeholder: "When is it due ?" %>
   <%=f.input :total_point, as: :integer, placeholder: "How many points are necessary ?" %>
   <%= f.submit "Create Goal" ><i class="fas fa-bullseye"></i>%>
   <% end %>
    </div>
  </div>
</div>
