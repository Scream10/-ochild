<h1>ASSIGN A NEW ACHIEVEMENT</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8">
      <%= simple_form_for @achievement, url: adult_achievements_path, method: :post do |f| %>
        <%= f.association :task %>
        <%= f.input :points, as: :integer %>
        <%= f.input :due_at, as: :date %>
        <%= f.submit "Create", class:'btn btn-primary' %>
        <% end %>

        <%= link_to 'Create my own task', new_adult_task_path, class:'btn btn-primary' %>
    </div>
  </div>
</div>
