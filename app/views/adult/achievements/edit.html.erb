
<div class="container form-size">
  <h1 class= "modal-design mb-3" >Was <span class= "achievement-name"><%= @achievement.user.first_name %></span> a good kid ?</h1>
  <div class="card">
    <div class="card-header">
    <h5 class = "text-center"><%= @achievement.task.name %></h5>
    </div>
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 mt-3">
        <h3 class= "modal-design"></h3>
        <h2 class="modal-design"><%= @achievement.points %></h2>
          <%= simple_form_for @achievement, url: adult_achievement_path, method: :patch, defaults: { input_html: { class: 'modal-design' } } do |f| %>
          <p class = "text-center">Are you satisfied with this ?</p>
          <%= f.input :points, label: false  %>
          <%= f.input :achieve , as: :hidden, input_html: { value: true } %>
          <div class = "text-center">
            <%= f.submit "Validate", class:'btn-tangerine my-3' %>
           </div>
          <% end %>
      </div>
    </div>
  </div>
</div>

