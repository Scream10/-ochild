<div class="container">
  <h1><%= @goal.title.upcase %> - <%= @goal.total_points %>pts</h1>

  <% @goal.proportions.each do |proportion| %>
    <p> <strong><%= proportion.category.name %></strong>: <%= proportion.percent %>%</p>
  <% end %>

  <br>
  <hr>
  <h3>_PENDING ACHIEVEMENTS</h3>

  <% @achievements.each do |achievement| %>
    <p><strong><%= achievement.task.name %></strong>: <%= achievement.task.description %></p>
    <%= link_to 'pending', edit_adult_achievement_path(achievement) ,class: "btn btn-primary" %>
  <% end %>

  <br>
  <br>
  <!-- Button trigger modal -->
  <div class="create-achievement">
      <%= link_to 'Create an achievement', new_adult_achievement_path, class: "btn btn-lg btn-primary", "data-toggle" => "modal", "data-target" => "#exampleModal" %>
  </div>

  <!-- Modal -->
  <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h4 class="modal-title" id="exampleModalLongTitle"> Assign a new achievement </h4>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
        </div>

        <div class="modal-body">
          <%= simple_form_for @achievement, url: adult_achievements_path, method: :post do |f| %>
            <%= f.association :task, collection: @tasks, label_method: :name_of_method, value_method: :id %>
            <%= f.input :points, as: :integer %>
            <%= f.input :due_at, as: :date %>
            <div class="d-flex justify-content-center mt-5 mb-3">
              <%= f.submit "Create", class: "btn-tangerine" %>
            </div>
            <div class="d-flex justify-content-center mt-2">
              <%= link_to "Create a new task", new_kid_task_path, class: "btn-tangerine" %>
            </div>
          <% end %>

        </div>
      </div>
    </div>
  </div>

  <br>
  <hr>
  <div class="container ">

    <h3>_SUGGESTIONS</h3>

    <% @tasks.each do |task| %>
    <div class="card-task-suggested">
      <div class="img-task">
        <%= image_tag task.photo, class: 'img-icon' %>
      </div>
      <div class="task-detail">
        <p><strong><%= task.name %></strong>: <%= task.description %></p>
        <% end %>

      </div>
        <%= link_to "Create a task", new_adult_task_path, class:'btn btn-primary' %>
    </div>
  </div>


  <hr>
  <h3>_PROGRESSION OF MY CHILD</h3>
  <hr>
  <p>Total points = <strong><%= @goal.total_points %> pts</strong></p>
  <% @achievements.each do |achievement| %>
    <p>Total achievement points = <strong><%= achievement.points %> pts</strong></p>
    <p>Progression of my child = <strong><%= @pourcent_goal_achieve %> %</strong></p>
  <% end %>
</div>
