<div class="container d-flex justify-content-center flex-column">

  <div class="text-center mb-5">
    <h1><%= @goal.title.upcase %> - <%= @goal.total_points %>pts</h1>

    <% @goal.proportions.each do |proportion| %>
      <p> <strong><%= proportion.category.name %></strong>: <%= proportion.percent %>%</p>
    <% end %>
  </div>

    <div class="text-center mb-5">
    <hr>
    <h3>PROGRESSION OF MY CHILD</h3>
    <hr>
    <p>Total points = <strong><%= @goal.total_points %> pts</strong></p>
    <% @achievements.each do |achievement| %>
      <p>Total achievement points = <strong><%= achievement.points %> pts</strong></p>
      <p>Progression of my child = <strong><%= @pourcent_goal_achieve %> %</strong></p>
    <% end %>
  </div>

  <div id="position-absolute-plant">
    <%= image_tag("plant-right.svg") %>
  </div>
  <div id="position-absolute-standing">
    <%= image_tag("standing1.svg") %>
  </div>

  <nav>
    <div id="nav-menu" class="nav justify-content-around" id="nav-tab" role="tablist">
      <a class="nav-item nav-link tab-menu" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Suggestions</a>
      <a class="nav-item nav-link tab-menu active" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Tasks</a>
    </div>
    <div class="line-grey">
    </div>
  </nav>

  <div class="tab-content" id="nav-tabContent">

    <div class="tab-pane fade" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab">

    <!-- CARDS ACCOMPLISHED / TODO -->
    <div class="container">
      <div class="row my-5 d-flex justify-content-center">
        <div class="col-sm-4">
          <div class="card-info-show my-3 justify-content-center">
            <div class="card-info-home-text text-center">
              <h4 class="font-weight-bold">Accomplished</h4>
                <p><strong><%= @count_achievement_accomplished.count %></strong></p>
            </div>
          </div>
        </div>
        <div class="col-sm-4">
          <div class="card-info-show my-3 justify-content-center">
            <div class="card-info-home-text text-center">
              <h4 class="font-weight-bold">Assign a new task</h4>

              <!-- Button trigger modal -->
              <div class="link-todo-btn-adult">
                  <%= link_to new_adult_achievement_path, "data-toggle" => "modal", "data-target" => "#exampleModal" do %>
                  <%= image_tag "plus_btn.svg" %>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- TASKS SUGGESTION-->
    <div class="container-suggestion">
      <div class="container">
        <div class="d-flex align-items-center flex-column">
          <% @tasks.each do |task| %>
            <%#= link_to new_adult_achievement_path do %>
            <button class="btn-modal task-id" data-task-id=<%= task.id %>>
              <div class="card-task-suggested">
                <div class="img-icon">
                  <%= image_tag task.photo %>
                </div>

                <div class="card-task-infos">
                  <h2><%= task.name %></h2>
                  <p><%= task.description %></p>
                </div>
                <div class="chevron ml-auto mr-4">
                    <%= image_tag "chevron.svg" %>
                </div>
              </div>

            </button>
              <%# end %>
          <% end %>

          <div class="overlay" id="overlay"></div>

          <div class="modal-new-achievement-with-task-id" id="modal-task">
            <button class="modal-close-btn" id="close-btn">
              X
            </button>
            <h3 id='task-name'></h3>

            <%= simple_form_for @achievement, url: adult_achievements_path, html: { method: :post, id: :new_achievement_2 } do |f| %>
              <%= f.input :task_id, input_html: { id: 'achievement_task_id_2' }  %>
              <%= f.input :points, as: :integer, input_html: { id: 'achievement_points_2' } %>
              <%#= f.input :due_at, as: :date, input_html: { id: 'achievement_due_at_1i_2' } %>
              <div class="d-flex justify-content-center mt-5 mb-3">
                <%= f.submit "Create", class: "btn-tangerine" %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

    <div class="tab-pane fade show active" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab">

      <!-- CARDS ACCOMPLISHED / TODO -->
      <div class="container">
        <div class="row my-5 d-flex justify-content-center">
          <div class="col-sm-4">
            <div class="card-info-show my-3 justify-content-center">
              <div class="card-info-home-text text-center">
                <h4 class="font-weight-bold">Accomplished</h4>
                  <p><strong><%= @count_achievement_accomplished.count %></strong></p>
              </div>
            </div>
          </div>
          <div class="col-sm-4">
            <div class="card-info-show my-3 justify-content-center">
              <div class="card-info-home-text text-center">
                <h4 class="font-weight-bold">Assign a new task</h4>

                <!-- Button trigger modal -->
                <div class="link-todo-btn-adult">
                    <%= link_to new_adult_achievement_path, "data-toggle" => "modal", "data-target" => "#exampleModal" do %>
                    <%= image_tag "plus_btn.svg" %>
                    <% end %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- ADULT TASKS TO DO -->
      <div class="container">
        <div class="row my-5 d-flex justify-content-center">
          <div class="card-achievement-pending d-flex align-items-start flex-column bd-highlight mb-3 justify-content-between">
            <div class="achievements-pending-title mb-auto p-2 bd-highlight">
              <h3>Tasks</h3>
            </div>
            <div class="achivement-done bd-highlight justify-content-end">
                <p>Pending: <%= @count_new_achievement.count %> </p>
            </div>

        <!-- List of achievements -->
        <% @achievements.each do |achievement| %>
          <div class="achivement-done bd-highlight justify-content-between">
            <div class="achievement-checkbox d-inline-flex">
              <label class="container-checkbox"><%= achievement.task.description.capitalize %>
                <input type="checkbox" checked="checked">
                <span class="checkmark"></span>
              </label>
            </div>
            <!-- Modal button Update Achievement -->
            <div class="link-pending">
              <button type="button" class="btn-square-sand" data-toggle="modal" data-target="#exampleModal">
                Update
              </button>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Modal Update Achievement -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content text-center">
            <div class="modal-header text-center">
              <div >
              <h5 class="modal-title d-flex justify-content-center" id="exampleModalLabel"><%= @achievement.task.name %></h5>
              </div>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <h2 class="modal-design mt-3"><%= @achievement.points %></h2>
            <div class="modal-body">
              <%= simple_form_for @achievement, url: adult_achievement_path, method: :patch, defaults: { input_html: { class: 'modal-design' } } do |f| %>
              <p class = "text-center">Are you satisfied with this ?</p>

                <%= f.input :points, label: false  %>
                <%= f.input :achieve , as: :hidden, input_html: { value: true } %>
                <div class="text-center">
                  <%= f.submit "Validate", class:'btn-tangerine mt-3' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

    <!-- Modal New Achievement -->
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h4 class="modal-title" id="exampleModalLongTitle"> Assign a new achievement </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body">
              <%= simple_form_for @achievement, url: adult_achievements_path, method: :post do |f| %>
                <%= f.association :task, collection: @tasks, label_method: :name_of_method, value_method: :id %>
                <div class="find-task d-flex mt-1">
                  <p><em>You didn't find a task? <%= link_to "Create a new task", new_adult_task_path %> </em></p>
                </div>
                <%= f.input :points, as: :integer %>
                <%= f.input :due_at, as: :date %>
                <div class="d-flex justify-content-center mt-5 mb-3">
                  <%= f.submit "Create", class: "btn-tangerine" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
